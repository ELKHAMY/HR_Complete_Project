@model HomeViewModel
<div class="row">
    <div class="col-lg-3 col-sm-6 mb-lg-0 mb-4">
        <div class="card">
            <div class="card-header p-3 pt-2">
                <div class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute">
                    <i class="material-icons opacity-10">weekend</i>
                </div>
                <div class="text-start pt-1">
                    <p class="text-sm mb-0 text-capitalize">عدد الاقسام</p>
                    <h4 class="mb-0">+@Model.DeptCount</h4>
                </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
                <p class="mb-0 text-start"><span class="text-success text-sm font-weight-bolder ms-1">+0% </span>@*من الأسبوع الماضي*@</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6 mb-lg-0 mb-4">
        <div class="card">
            <div class="card-header p-3 pt-2">
                <div class="icon icon-lg icon-shape bg-gradient-primary shadow-primary text-center border-radius-xl mt-n4 position-absolute">
                    <i class="material-icons opacity-10">leaderboard</i>
                </div>
                <div class="text-start pt-1">
                    <p class="text-sm mb-0 text-capitalize">الحضور اليوم</p>
                    <h4 class="mb-0">+@Model.AttendCount</h4>
                </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
                <p class="mb-0 text-start"><span class="text-success text-sm font-weight-bolder ms-1">+0% </span></p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6 mb-lg-0 mb-4">
        <div class="card">
            <div class="card-header p-3 pt-2">
                <div class="icon icon-lg icon-shape bg-gradient-success shadow-success text-center border-radius-xl mt-n4 position-absolute">
                    <i class="material-icons opacity-10">store</i>
                </div>
                <div class="text-start pt-1">
                    <p class="text-sm mb-0 text-capitalize">عدد الاجازات الاسبوع</p>
                    <h4 class="mb-0">
                        <span class="text-danger text-sm font-weight-bolder ms-1">+0%</span>
                        +@Model.HolidayCount
                    </h4>
                </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
                <p class="mb-0 text-start"><span class="text-success text-sm font-weight-bolder ms-1">+0% </span>@*من الشهر الماضي*@</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card">
            <div class="card-header p-3 pt-2">
                <div class="icon icon-lg icon-shape bg-gradient-info shadow-info text-center border-radius-xl mt-n4 position-absolute">
                    <i class="material-icons opacity-10">person_add</i>
                </div>
                <div class="text-start pt-1">
                    <p class="text-sm mb-0 text-capitalize">عدد الموظفين</p>
                    <h4 class="mb-0">+@Model.EmpCount</h4>
                </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
                <p class="mb-0 text-start"><span class="text-success text-sm font-weight-bolder ms-1">+0% </span>@*مقارنة بيوم أمس*@</p>
            </div>
        </div>
    </div>
</div>