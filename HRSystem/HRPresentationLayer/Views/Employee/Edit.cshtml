@model Domain.Models.EmployeePersonalData

@{
    ViewData["Title"] = "الموظفين / تعديل";
    SelectList deptitem = new SelectList(ViewBag.deptlist, "Id", "Name");

}


@*<h4>تعديل بيانات الموظف</h4>
*@<hr />
<div class="row">
    <div class="col-md-1 "></div>
    <div class="col-md-10  card ">
        <form asp-action="Edit">
            <h3>
                البيانات الشخصية
            </h3>
            <br />
            <div class="row mb-6">
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">الاسم</label>
                        <input asp-for="Name" class="form-control border border-2" placeholder="الاسم" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        <label class="control-label">العنوان</label>
                        <input asp-for="Address" class="form-control border border-2" placeholder="العنوان" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-6">
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">رقم الهاتف</label>
                        <input asp-for="Phone" class="form-control border border-2" placeholder="رقم الهاتف" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        <label>الجنس</label>
                        <select class="form-control border border-2" asp-for="Gender">
                            <option value="0">--اختر الجنس--</option>
                            <option value="رجل">رجل</option>
                            <option value="امراة">امراة</option>

                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-6">
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">الجنسية</label>
                        <input asp-for="National" class="form-control border border-2" placeholder="الجنسية" />
                        <span asp-validation-for="National" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">تاريخ الميلاد</label>
                        <input asp-for="Birthday" class="form-control border border-2" type="date" placeholder="تاريخ الميلاد" />
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-6">
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">الرقم القومي</label>
                        <input asp-for="NationalId" class="form-control border border-2" placeholder="الرقم القومي" />
                        <span asp-validation-for="NationalId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label>القسم</label>

                        <select class="form-control border border-2" asp-for="DepartmentId" asp-items="deptitem">
                            <option value="0">-- إختر قسم --</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <h3>
                بيانات العمل
            </h3>
            <br />
            <div class="row mb-6">
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">تاريخ التعاقد</label>
                        <input asp-for="WorkDate" class="form-control border border-2" type="date" placeholder="تاريخ التعاقد" />
                        <span asp-validation-for="WorkDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">الراتب</label>
                        <input asp-for="salary" class="form-control border border-2" placeholder="الراتب" />
                        <span asp-validation-for="salary" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-6">
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">موعد الحضور</label>
                        <input asp-for="AttandanceDate" class="form-control border border-2" type="time" placeholder="موعد الحضور" />
                        <span asp-validation-for="AttandanceDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">موعد الانصراف</label>
                        <input asp-for="OutDate" class="form-control border border-2" type="time" placeholder="موعد الانصراف" />
                        <span asp-validation-for="OutDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group center">
                <input type="submit" value="حفظ" class="btn btn-success mt-2" />
                <button asp-action="Index" class="btn btn-info mt-2">الرجوع للقائمة</button>
            </div>
        </form>
    </div>

</div>
<div class="col-md-1 "></div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
