@model RoleViewModel


<!-- Modal -->
<div class="modal fade" id="exampleModal" dir="rtl" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 m-3" id="exampleModalLabel"></h1>
            </div>
            <div class="modal-body">
                <form asp-action="Role" >
                    <div asp-validation-summary="All" class="text-danger"></div>
                  
                    <div class="form-group">
                        <input asp-for="Id" class="form-control border" hidden id="roleId" />
                        <label asp-for="Name" class="control-label">إسم المجموعة</label>
                        <input asp-for="Name" class="form-control border" value="@(Model.Name != null ? Model.Name : string.Empty)" id="roleName" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit"  id="btnsave" class="btn btn-success mt-2" />  
                        <input type="submit" value="اغلاق" data-bs-dismiss="modal" class="btn btn-danger mx-2 mt-2" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

